<div class="columns">
<div class="column">
    <% @songs.each do |song| %>
            <div class="card is-inline">
            <div class="card-content">
            <div class="media">
                <div class="media-left">
                <figure class="image is-48x48">
                <img src="<%= song.thumbnail %>"/>
                </figure>
                </div>
                <div class="media-content">
                <p class="title is-4"><%=link_to song.title, song %></p>
                <p class="subtitle is-6"> <%= song.artist %></p>
                </div>
            </div>
            </div>
        </div>
        <% end %>
        </div>
</div>