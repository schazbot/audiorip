<h1><strong>Sign Up</strong></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>